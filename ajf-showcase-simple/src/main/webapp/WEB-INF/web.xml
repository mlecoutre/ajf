	<error-page>
		<error-code>403</error-code>
		<location>/ajf/errors/accessDenied.xhtml</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/ajf/errors/notFound.xhtml</location>
	</error-page>
	<resource-ref>
		<res-ref-name>jdbc/ETNA_ETNAFLOW_DS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
