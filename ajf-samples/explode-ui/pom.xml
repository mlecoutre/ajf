				-->
			</dependencies>

			<build>

				<plugins>
									 
					<plugin>
						<groupId>com.google.code.maven-config-processor-plugin</groupId>
						<artifactId>maven-config-processor-plugin</artifactId>
						<version>2.1</version>
						<configuration>
							<transformations>
								<transformation>
									<type>xml</type>
									<replacePlaceholders>false</replacePlaceholders>
									<input>src/main/webapp/WEB-INF/web.xml</input>
									<output>web.xml</output>
									<config>src/main/config/processing-web.xml</config>
								</transformation>
							</transformations>
							<namespaceContexts>
								<s>http://java.sun.com/xml/ns/javaee</s>
							</namespaceContexts>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>process</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
														
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<warName>${project.artifactId}</warName>
							<webXml>${project.build.directory}/web.xml</webXml>
							<packagingIncludes>
								WEB-INF/lib/jsf*.jar,
								WEB-INF/lib/jsp*.jar,
								WEB-INF/lib/el*.jar,
								WEB-INF/lib/javax.faces*.jar,
								WEB-INF/lib/primefaces*.jar,
								WEB-INF/lib/aristo*.jar,
								WEB-INF/lib/jstl*.jar,
								WEB-INF/lib/openwebbeans-*.jar,
								WEB-INF/lib/shiro-*.jar,
								WEB-INF/lib/ajf-web*.jar,
								**/*.xml,
								**/*.properties,
								**/*.ini,
								**/*.class,
								**/*.jpg,
								**/*.png,
								**/*.css,
								**/*.js*,
								**/*.*html
							</packagingIncludes>
							<archive>
								<addMavenDescriptor>true</addMavenDescriptor>
								<manifest>
									<addClasspath>true</addClasspath>
									<classpathPrefix>lib/</classpathPrefix>
									<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								</manifest>
								<manifestEntries>
									<Build-Jdk>${java.build.version}</Build-Jdk>
									<Implementation-Build>${buildNumber}</Implementation-Build>
								</manifestEntries>
							</archive>
						</configuration>
