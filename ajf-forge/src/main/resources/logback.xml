<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %X{uuid} %X{userid}
				%logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %X{uuid} %X{userid}
				%logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="am.ajf" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="am.ajf.forge" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ch" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="a.a.f.util.VelocitySlf4JLogSystem" level="info"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>


</configuration>