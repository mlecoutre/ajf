	<groupId>org.apache.tomcat.maven</groupId>
	<artifactId>tomcat7-maven-plugin</artifactId>
	<version>2.0-beta-1</version>
	<configuration>

		<!-- Embedded port -->
		<port>8080</port>
		<contextFile>src/test/resources/tomcat_context.xml</contextFile>
